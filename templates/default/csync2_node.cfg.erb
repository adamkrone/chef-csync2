nossl * *;
group <%= @group %>
{
<% @hosts.each do |host| %>
      <% if host == @group %>
        host <%= host %>;
      <% else %>
        host (<%= host %>);
      <% end %>
<% end %>
        key <%= @key_path %>;
<% @synced_dirs.each do |dir| %>
        include <%= dir %>;
<% end %>
        auto younger;
}
